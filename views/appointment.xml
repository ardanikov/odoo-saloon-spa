<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- cdn.appointment list view -->
        <record id="cdn_appointment_view_list" model="ir.ui.view">
            <field name="name">cdn.appointment.view.list</field>
            <field name="model">cdn.appointment</field>
            <field name="arch" type="xml">
                <list>
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="pelanggan_id"/>
                    <field name="tanggal"/>
                    <field name="cabang_id"/>

                    <field name="status"/>
                    <field name="invoice_id" invisible="not invoice_id"/>
                    <field name="picking_id" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- cdn.appointment form view -->
        <record id="cdn_appointment_view_form" model="ir.ui.view">
            <field name="name">cdn.appointment.view.form</field>
            <field name="model">cdn.appointment</field>
            <field name="arch" type="xml">
                <form string="Appointment">

                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="status != 'draft'"/>
                        <button name="action_reset" string="Reset" type="object" invisible="status != 'confirm'"/>
                        <button name="action_create_invoice" string="Buat Tagihan" type="object" class="btn-secondary" invisible="status != 'confirm' or invoice_id"/>
                        <button name="action_confirm_bayar" string="Bayar" type="object" class="btn-secondary" invisible="not invoice_id or payment_state == 'paid'"/>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h3>
                                <label for="name" string="No Appointment"/>
                            </h3>
                            <h1>
                                <field name="name" class="mb-0 mt-1" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="pelanggan_id"/>
                            <field name="tanggal"/>
                            <field name="cabang_id"/>
                            <field name="invoice_id" invisible="not invoice_id"/>
                            <field name="sale_order_id" invisible="not sale_order_id"/>
                            <field name="picking_id" invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Produk">
                                <field name="appointment_line_ids">
                                    <list editable="bottom">
                                        <field name="produk_id"/>
                                        <field name="product_quantity"/>
                                        <field name="price_unit"/>
                                        <field name="price_total"/>
                                        <field name="currency_id" invisible="1" column_invisible="1"/>
                                    </list>
                                </field>
                                <group name="note_group" col="6" class="mt-2 mt-md-0 me-2 float-end">
                                    <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                        <field name="amount_total" colspan="2" readonly="1"/>
                                        <field name="currency_id" invisible="1" column_invisible="1"/>
                                    </group>
                                    <div class="oe_clear"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- cdn.appointment action window -->
        <record id="cdn_appointment_action" model="ir.actions.act_window">
            <field name="name">Data Appointment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.appointment</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->

                </p>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="cdn_appointment_menu_act" name="Appointment" parent="cdn_salon_menu_root" action="cdn_appointment_action" sequence="1"/>

    </data>
</odoo>