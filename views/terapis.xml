<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- LIST VIEW TERAPIS -->
        <record id="cdn_terapis_view_list" model="ir.ui.view">
            <field name="name">cdn.terapis.view.list</field>
            <field name="model">cdn.terapis</field>
            <field name="arch" type="xml">
                <list string="Terapis">
                    <field name="kode"/>
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="aktif"/>
                </list>
            </field>
        </record>

        <!-- FORM VIEW TERAPIS -->
        <record id="cdn_terapis_view_form" model="ir.ui.view">
            <field name="name">cdn.terapis.view.form</field>
            <field name="model">cdn.terapis</field>
            <field name="arch" type="xml">
                <form string="Terapis">
                    <sheet>

                        <!-- DATA UTAMA -->
                        <group>
                            <group>
                                <field name="kode"/>
                                <field name="name"/>
                                <field name="gender"/>
                            </group>

                            <group>
                                <field name="phone"/>
                                <field name="email"/>
                            </group>
                        </group>

                        <!-- SPESIALIS (DI DALAM TERAPIS) -->
                        <group string="Spesialis">
                            <field name="spesialis_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="note"/>
                                </list>
                            </field>
                        </group>

                        <!-- STATUS & CATATAN -->
                        <group>
                            <field name="aktif"/>
                            <field name="note"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- ACTION -->
        <record id="action_cdn_terapis" model="ir.actions.act_window">
            <field name="name">Terapis</field>
            <field name="res_model">cdn.terapis</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- MENU -->
        <menuitem id="menu_cdn_terapis"
                  name="Terapis"
                  parent="cdn_menu_categ"
                  action="action_cdn_terapis"
                  sequence="10"/>

    </data>
</odoo>